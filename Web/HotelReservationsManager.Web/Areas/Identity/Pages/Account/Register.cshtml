@page
@model RegisterModel

<div class="mt-3">
    <h1 class="text-center">Register</h1>
    <hr class="bg-secondary half-width hr-2" />
    <form class="mx-auto half-width" method="post">
        <div class="form-group">
            <label asp-for="Input.Username"></label>
            <input type="text" class="form-control" id="username" placeholder="Username..." asp-for="Input.Username">
            <span asp-validation-for="Input.Username" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Input.Password"></label>
            <input type="password" class="form-control" id="password" placeholder="Password..." asp-for="Input.Password">
            <span asp-validation-for="Input.Password" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Input.ConfirmPassword"></label>
            <input type="password" class="form-control" id="confirmPassword" placeholder="Confirm Password..." asp-for="Input.ConfirmPassword">
            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Input.FirstName"></label>
            <input type="text" class="form-control" id="firstName" placeholder="First Name..." asp-for="Input.FirstName">
            <span asp-validation-for="Input.FirstName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Input.MiddleName"></label>
            <input type="text" class="form-control" id="middleName" placeholder="Middle Name..." asp-for="Input.MiddleName">
            <span asp-validation-for="Input.MiddleName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Input.Surname"></label>
            <input type="text" class="form-control" id="surname" placeholder="Surname..." asp-for="Input.Surname">
            <span asp-validation-for="Input.Surname" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Input.EGN"></label>
            <input type="text" class="form-control" id="egn" placeholder="EGN..." asp-for="Input.EGN">
            <span asp-validation-for="Input.EGN" class="text-danger"></span>
        </div>
        @*<div class="form-group">
            <label asp-for="Input.PhoneNumber"></label>
            <input type="text" class="form-control" id="phoneNumber" placeholder="Phone Number..." asp-for="Input.PhoneNumber">
            <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
        </div>*@
        <div class="form-group">
            <label asp-for="Input.DateOfAppointment"></label>
            <input type="date" class="form-control" id="dateOfAppointment" placeholder=" Date Of Appointment..." asp-for="Input.DateOfAppointment">
            <span asp-validation-for="Input.DateOfAppointment" class="text-danger"></span>
        </div>
        @*<div class="form-group">
            <label asp-for="Input.ActivStatus"></label>
            <input type="checkbox" class="form-control" id="activStatus" placeholder=" Activ Status..." asp-for="Input.ActivStatus">
            <span asp-validation-for="Input.ActivStatus" class="text-danger"></span>
        </div>
                <div class="form-group">
            <label asp-for="Input.DateOfDismissal"></label>
            <input type="date" class="form-control" id="dateOfDismissal" placeholder="Date Of Dismissal..." asp-for="Input.DateOfDismissal">
            <span asp-validation-for="Input.DateOfDismissal" class="text-danger"></span>
        </div>*@
        <div class="form-group">
            <label asp-for="Input.Email"></label>
            <input type="email" class="form-control" id="email" placeholder="Email..." asp-for="Input.Email">
            <span asp-validation-for="Input.Email" class="text-danger"></span>
        </div>
        <div class="button-holder d-flex justify-content-center">
            <button type="submit" class="btn chushka-bg-color">Register</button>
