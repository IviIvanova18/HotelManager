<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <title>HOTEL</title>
    <link rel="stylesheet" href="~/css/reset-css.css">
    <link rel="stylesheet" href="~/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/css/style.css">
    <link runat="server" rel="shortcut icon" href="~/hotelicon_san_icon.ico" type="image/x-icon" />
    <link runat="server" rel="icon" href="~/hotelicon_san_icon.ico" type="image/ico" />
</head>
<body>
    <div class="container-fluid">
        <header>
            <nav class="navbar navbar-expand-lg chushka-bg-color">
                <a class="navbar-brand nav-link-white" asp-controller="Home" asp-action="Index">HOTEL</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse d-flex justify-content-between" id="navbarNav">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link nav-link-white" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        @if (!this.User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item">
                                <a class="nav-link nav-link-white" asp-area="Identity" asp-page="/Account/Login">Login</a>
                            </li>
                            @*<li class="nav-item">
                <a class="nav-link nav-link-white" asp-area="Identity" asp-page="/Account/Register">Register</a>
            </li>*@
                        }
                        @if (this.User.IsInRole("Admin"))
                        {
                            <li class="nav-item">
                                <a class="nav-link nav-link-white" asp-controller="Room" asp-action="Index">Rooms Informaton</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link nav-link-white" asp-controller="Reservation" asp-action="Index">All Reservation</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link nav-link-white" asp-controller="Reservation" asp-action="Create">Make new reservation</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link nav-link-white" asp-controller="User" asp-action="Index">All Emploees</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link nav-link-white" asp-area="Identity" asp-page="/Account/Register">Register New Employee</a>
                            </li>

                        }
                        @if (this.User.IsInRole("User"))
                        {
                            <li class="nav-item">
                                <a class="nav-link nav-link-white" asp-controller="Reservation" asp-action="Index">All Reservation</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link nav-link-white" asp-controller="Reservation" asp-action="Create">Make new reservation</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link nav-link-white" asp-controller="Room" asp-action="Index">Rooms Informaton</a>
                            </li>

                        }
                    </ul>
                    @if (this.User.Identity.IsAuthenticated)
                    {

                        <ul class="navbar-nav">
                            <li class="nav-item">
                                <a class="nav-link nav-link-white" asp-area="Identity" asp-page="/Account/Logout">Logout</a>
                            </li>
                        </ul>
                    }
                </div>
            </nav>
        </header>
        <main>
            @RenderBody()
        </main>

    </div>
    @RenderSection("Scripts", required: false)
</body>
</html>
