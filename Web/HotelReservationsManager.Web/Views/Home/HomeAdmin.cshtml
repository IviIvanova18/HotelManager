@*@model List<ProductHomeViewModel>*@

<div class="mt-3 mb-5">
    <div class="container-fluid text-center">
        <h2>Greetings, @this.User.Identity.Name!</h2>
        @if (this.User.IsInRole("Admin"))
        {
            <h4>Enjoy your work today!</h4>

            <a asp-controller="Room" asp-action="Create" class="btn btn-danger">Create New Room </a> <br /><br />

            <a asp-controller="Reservation" asp-action="Create" class="btn btn-danger">Create New Reservation </a> <br /><br />

            <a asp-controller="Room" asp-action="Index" class="btn btn-danger">View All Room </a> <br /><br />

            <a asp-controller="Reservation" asp-action="Index" class="btn btn-danger">View All Reservations </a><br /><br />
        }
        else
        {
            <h4>Have a nice work day.</h4>

            <a asp-controller="Reservation" asp-action="Create" class="btn btn-danger">Create New Reservation </a> <br /><br />

            <a asp-controller="Room" asp-action="Index" class="btn btn-danger">View All Room </a> <br /><br />

            <a asp-controller="Reservation" asp-action="Index" class="btn btn-danger">View All Reservations </a><br /><br />

        }
        <br />


       








    </div>
</div>
